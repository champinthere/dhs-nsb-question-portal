= form_for @question_set do |f|
  - if @question_set.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question_set.errors.count, "error")} prohibited this question_set from being saved:"
      %ul
        - @question_set.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
